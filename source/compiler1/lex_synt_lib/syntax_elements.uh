type BlockElement = ust::variant</ tup[
	ust::box</ScopeBlock/>,
	VariablesDeclaration,
	AutoVariableDeclaration,
	ReturnOperator,
	YieldOperator,
	AssignmentOperator,
	AdditiveAssignmentOperator,
	IncrementOperator,
	DecrementOperator,
	Expression,
	IfOperator,
	StaticIfOperator,
	IfCoroAdvanceOperator,
	SwitchOperator,
	WhileOperator,
	LoopOperator,
	RangeForOperator,
	CStyleForOperator,
	BreakOperator,
	ContinueOperator,
	WithOperator,
	StaticAssert,
	ust::shared_ptr_final</TypeAlias/>,
	Halt,
	HaltIf
	] />;

type BlockElements= ust::vector</BlockElement/>;

type IfAlternative=
	ust::variant</ tup[
		Block,
		IfOperator,
		StaticIfOperator,
		IfCoroAdvanceOperator
	] />;

type IfAlternativeNullablePtr= ust::box_nullable</IfAlternative/>;

struct Function
{
	enum Kind
	{
		Regular,
		Generator,
		Async,
	}

	enum VirtualKind
	{
		None, // Regular, non-virtual
		DeclareVirtual,
		VirtualOverride,
		VirtualFinal,
		VirtualPure,
	}

	enum BodyKind
	{
		Regular,
		BodyGenerationRequired,
		BodyGenerationDisabled,
	}

	SrcLoc src_loc;
	ust::vector</ ust::string8 /> name; // A, A::B, A::B::C::D, ::A, ::A::B
	OverloadedOperator operator= OverloadedOperator::None;

	Kind kind= Kind::Regular;
	VirtualKind virtual_kind= VirtualKind::None;
	BodyKind body_kind= BodyKind::Regular;
	NonSyncTag coroutine_non_sync_tag; // Non-empty for generators

	bool no_mangle= false;
	bool constexpr_= false;
	bool is_conversion_constructor= false;

	ust::box_nullable</Expression/> condition; // enable_if

	FunctionType function_type;
	ust::box_nullable</Block/> block; // null for prototype
	ust::box_nullable</StructNamedInitializer/> constructor_initializer_list;
}

