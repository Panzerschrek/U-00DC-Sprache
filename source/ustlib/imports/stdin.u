import "string_base.u"

namespace ust
{

// Extract single code point from STDIN, which may lead to extraction of multiple bytes because of UTF-8.
// Returns empty optional in case of end of file.
// Returns zero char in case of broken UTF-8.
fn stdin_read_character() : optional</char32/>;

// Read the whole line into a string.
// Returns empty optional in case of end of file.
fn stdin_read_line() : optional</string_base</char8/>/>;

} // namespace ust
