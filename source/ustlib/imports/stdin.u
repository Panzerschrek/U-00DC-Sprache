import "string_base.u"

namespace ust
{

// Extract single code point from STDIN, which may lead to extraction of multiple bytes because of UTF-8.
// Returns zero char in case if actual zero char was read or in case of end of file.
fn stdin_read_character() : char32;

// Read the whole line into a string.
// In case of end of file empty string is returned.
fn stdin_read_line() : string_base</char8/>;

} // namespace ust
