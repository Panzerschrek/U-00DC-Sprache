namespace ust
{

// Use this function to suspend "unused name" error for variables.
template</type T/>
fn ignore_unused(T& t)
{
	// Force use unused variable in "typeof" context.
	ignore_unused_impl</ typeof(t) />();
}

template</type T/>
fn constexpr ignore_unused_impl(){}

template</type T/>
fn mark_as_mutated(T &mut t)
{
	auto ptr= $<(t); // For now this is the only way to mark a variable as mutable - to take a raw pointer to it.
	ignore_unused(ptr);
}

} // namespace ust
