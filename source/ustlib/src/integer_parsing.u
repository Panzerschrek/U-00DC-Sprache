template</type C/>
fn parse_integer_impl_i32( array_view_imut</C/> &mut range ) : optional</i32/>
{
	if( !range.empty() && range.front() == C('-') )
	{
		range.drop_front();
		if_var( res : parse_integer_impl_u32(range) )
		{
			if( res > 2147483648u )
			{
				return null_optional;
			}
			return i32(-res);
		}
	}
	else
	{
		if_var( res : parse_integer_impl_u32(range) )
		{
			if( res > 2147483647u )
			{
				return null_optional;
			}
			return i32(res);
		}
	}
	return null_optional;
}

