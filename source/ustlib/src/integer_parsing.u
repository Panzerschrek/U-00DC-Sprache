template</type C/>
fn parse_integer_impl_u32( array_view_imut</C/> &mut range ) : optional</u32/>
{
	if( range.empty() )
	{
		return null_optional;
	}

	var C first_char= range.drop_and_get_front();
	if( first_char == C('0') )
	{
		return u32(0);
	}
	if( !( first_char >= C('1') && first_char <= C('9') ) )
	{
		return null_optional;
	}

	var u32 mut result= u32(first_char) - u32('0');
	while( !range.empty() )
	{
		var C c= range.front();
		if( c >= C('0') && c <= C('9') )
		{
			if( result > 429496729u )
			{
				// Overflow detected.
				return null_optional;
			}
			var u32 mul10= result * 10u;
			var u32 add_digit= mul10 + (u32(c) - u32('0'));
			if( add_digit < mul10 )
			{
				// Overflow detected.
				return null_optional;
			}
			result= add_digit;
			range.drop_front();
		}
		else
		{
			break;
		}
	}

	return result;
}

