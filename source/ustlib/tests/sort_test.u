	{ // "is_sorted" for array consisting of three elements, two of them are equal.
		var [ i32, 3 ]
			a[ 1, 1, 2 ], b[ 1, 2, 1 ], c[ 2, 1, 1 ],
			d[ 2, 2, 3 ], e[ 2, 3, 2 ], f[ 3, 2, 2 ],
