		halt if( !ust::is_sorted( a ) );
		halt if(  ust::is_sorted( b ) );
		halt if(  ust::is_sorted( c ) );
		halt if( !ust::is_sorted( d ) );
		halt if(  ust::is_sorted( e ) );
		halt if(  ust::is_sorted( f ) );
