{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "wordPattern": "[a-zA-Z][a-zA-Z0-9_]*",
    "brackets": [
        [ "(", ")" ],
        [ "[", "]" ],
        [ "{", "}" ],
        [ "</", "/>" ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "</",
            "close": "/>"
        }
    ]
}