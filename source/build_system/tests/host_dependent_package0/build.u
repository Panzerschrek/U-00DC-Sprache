import "/build_system.uh"

fn GetPackageInfo( BK::BuildSystemInterface &mut build_system_interface ) : BK::PackageInfo
{
	ust::ignore_unused( build_system_interface );

	var BK::BuildTarget mut target{ .target_type = BK::BuildTargetType::Executable };
	target.source_files.push_back( "exe/main.u" );
	target.name= "exe";

	return BK::PackageInfo
	{
		.build_targets= ust::make_array( move(target) ),
		.package_dependencies= ust::make_array(
			BK::PackageDependency( BK::PackageName{ .path= "sub_package" }, BK::PackageDependency::RequiredSystem::Host ) )
	};
}
