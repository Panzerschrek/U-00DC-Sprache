import "/build_system.uh"

fn GetPackageInfo( BK::BuildSystemInterface &mut build_system_interface ) : BK::PackageInfo
{
	ust::ignore_unused( build_system_interface );

	// Depend on a sub-package of a global versioned package.
	var BK::PackageName sub_package
	{
		.name_base=
			BK::GlobalVersionedPackageName
			{
				.name= "integer_adder", .version{ .major= 1u, .minor= 2u, .patch= 3u, .tweak= 4u }
			},
		.path= "impl",
	};

	var BK::BuildTarget mut target
	{
		.name= "exe",
		.target_type = BK::BuildTargetType::Executable,
		.source_files= ust::make_array</ust::string8/>( "exe/main.u" ),
		.private_dependencies= ust::make_array( BK::DependencyName{ .name= "integer_adder", .package_name= sub_package } )
	};

	return BK::PackageInfo
	{
		.build_targets= ust::make_array( move(target) ),
		.package_dependencies= ust::make_array( BK::PackageDependency{ .name= sub_package } )
	};
}
